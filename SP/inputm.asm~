 MACRO
 INCR
 MOVER A,B
 ADD B,C
 MOVEM A,C
 MEND
 MACRO
 INCR_M &TEST,&MEM_VAL=,&INCR_VAL=,&REG=
 MOVER &REG &MEM_VAL
 ADD &REG &TEST
 MOVEM &REG &MEM_VAL
 MEND
 MACRO
 INCR_D &MEM_VAL=,&INCR_VAL=,&REG=ACREG
 MOVER &REG &MEM_VAL
 ADD &REG &INCR_VAL
 MOVEM &REG &MEM_VAL
 MEND
 START 200 
 MOVER DREG '=5'
 MOVEM AREG X
LOOP MOVER AREG A
 MOVER CREG B
 ADD CREG '=1'
 MOVER AREG A
 MOVER AREG A
 MOVER AREG A
INCR
 MOVER CREG B
 MOVER AREG A
INCR_M C INCR_VAL=X MEM_VAL=Y REG=DREG
 BC ANY NEXT
 LTORG
 MOVER AREG A
NEXT SUB AREG '=1'
 BC LT BACK
INCR_D MEM_VAL=A INCR_VAL=B
LAST STOP
 ORIGIN LOOP+2
 MULT CREG B
 ORIGIN LAST+1
A DS 1
BACK EQU LOOP
B DS 1
X DS 1
 END
